{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Next.js",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "port": 3000,
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": ["${workspaceFolder}/.next/**/*.js"],
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
